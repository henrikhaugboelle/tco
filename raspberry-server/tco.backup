#!/bin/sh
#/etc/init.d/tco
#

#touch ~/tco/raspberry-server/testfile

#touch /var/tco-test

case "$1" in
  start)
    echo "Start TCO"
    forever start /home/hhau/tco/raspberry-server/app.js
    #touch /var/tco-start
    #touch /home/hhau/tco/raspberry-server/startfile
    #touch ~/tco/raspberry-server/starttest
    ;;
  stop)
    forever stop /home/hhau/tco/raspberry-server/app.js
    echo "Stop TCO"
    #~/tco/raspberry-server/stop.sh
    ;;
  restart)
    echo "Restart TCO"
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage: etc/init.d/tco {start|stop}"
    exit 1
    ;;
esac

exit 0
